#!/bin/sh

host=${HOST:-$HOSTNAME}
host=${host%%.*}
exec 1> ~/.xsession-my-errors.${host} 2>&1

. ~/.shared_env

echo "### .xsession-progs ..."

. $ZDOTDIR/lib/libproc.sh

for prog in $( . $ZDOT_FIND_HOOKS ".xsession-progs.d" ); do
    if [ -x "$prog" ]; then
        echo "### $prog ..."
        "$prog"
        echo
    else
        echo "WARNING: $prog not executable; skipping"
    fi
done

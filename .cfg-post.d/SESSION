#!/bin/bash

touch ~/.Xresources.d/local.rdb

# also change SESSION/.xsession
for dir in ~/.X_fonts ~/.truetype; do
  mkfontdir "$dir"
done

mkdir -p ~/.xsession-progs.d

if which startkde >&/dev/null; then
    for dir in .kde .kde4; do
        autostart=$HOME/$dir/Autostart
        mkdir -p $autostart
        cd $autostart
        # notice the symlink mustn't be hidden
        if ! [ -e xsession-progs ]; then
            if ln -s ../../.xsession-progs xsession-progs; then
                echo "Created $autostart/xsession-progs symlink"
            fi
        fi
    done
fi

touch ~/.synergy-{client,server}-name

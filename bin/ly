#!/bin/bash

if [ `monitors-connected` == 2 ] && inxi -Gxx | grep -q 'LG (GoldStar)'; then
    echo "Detected LG as second monitor; using l39 layout"
    fluxbox-layout l39
elif [ `monitors-connected` == 1 ]; then
    fluxbox-layout laptop
else
    echo >&2 "ERROR: Couldn't figure out which layout to apply!"
    exit 1
fi

#!/bin/sh
. $ZDOTDIR/lib/libfonts.sh

#Eterm -t top
unset COLUMNS

geometry=90x40
theme=$(<~/.config/gnome-terminal-profile)
profile=top-term-${theme:-Dark}

while true; do
    case "$1" in
        --geometry)
            geometry="$2"
            shift 2
            ;;
        --title)
            title="$2"
            shift 2
            ;;
        --)
            shift
            break
            ;;
        *)
            break
            ;;
    esac
done

: ${title:="$cmd $*"}
: ${role:="$title*"}

cmd="${1:-top}"
[ -n "$1" ] && shift

#urxvt-256color -fn $small_font -geometry $geometry -e "$cmd" "$@"
gnome-terminal \
    --profile=$profile \
    --geometry $geometry \
    --role "$role" \
    --title "$title" \
    -- \
    "$cmd" "$@"

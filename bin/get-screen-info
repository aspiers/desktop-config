#!/usr/bin/python3

import os
import re
import subprocess
import sys

sys.path.append(os.getenv('HOME') + '/lib')

import libdpy


info = libdpy.get_mouse_location_info()
print("xdotool_screen=%s" % info['SCREEN'])

screens = libdpy.extract_xrandr_geometries()
print("monitors_connected=%d" % len(screens))

screen = libdpy.get_current_screen()

for k, v in screen.items():
    print("screen_current_%s=%s" % (k, v))

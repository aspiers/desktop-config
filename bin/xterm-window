#!/bin/bash

. $ZDOTDIR/lib/libdpy.sh

font=9x15
font_char_width=9
font_char_height=15

# Take 80% of height, then allow for window border so that it just
# touches the watchlogs window.
border_height=25
height=$(( (dpy_height - border_height) * 4 / 5 / font_char_height ))

width=90

xterm -fn $font -g ${width}x${height}+0+0

